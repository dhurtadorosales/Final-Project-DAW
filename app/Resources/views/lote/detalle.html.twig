{% extends 'layout.html.twig' %}

{% block title %}Lotes{% endblock %}

{% block section %}
    <h1>Fincas del lote</h1>
    <!--<a href="#" class="btn btn-success"><i class="fa fa-plus"></i> Añadir alumno</a>




    -->
    <p></p>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>Nº Finca</th>
            <th>Referencia Catastral</th>
            <th>Denominación</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for finca in fincas %}
            <tr>
                <td>{{ finca.deposito }}-{{ lote.temporada }}</td>
                <td><select name="slAmasadas" id="slAmasadas">
                        <option value="0"></option>
                        {% for finca in lote.deposito %}
                            <option value="{{ finca.deposito.amasadas.id }}">{{ finca.deposito.amasadas[0].denominacion }}</option>
                        {% endfor %}
                    </select></td>
                <td>
                <td>
                    <a href="#" class="btn btn-xs btn-success col-sm-6" title="Listado de fincas del socio">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="btn btn-xs btn-info col-sm-6" title="Modificar datos del socio">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="#" class="btn btn-xs btn-danger col-sm-6" title="Dar de baja">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}